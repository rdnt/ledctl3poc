{
  "$schema": "https://json-schema.org/draft-04/schema#",
  "$id": "https://github.com/rdnt/ledctl/inputconfig/schema",
  "type": "object",
  "additionalProperties": {
    "$ref": "#/$defs/option"
  },
  "$defs": {
    "option": {
      "anyOf": [
        {
          "$ref": "#/$defs/booleanOption"
        },
        {
          "$ref": "#/$defs/stringOption"
        },
        {
          "$ref": "#/$defs/integerOption"
        },
        {
          "$ref": "#/$defs/floatOption"
        },
        {
          "$ref": "#/$defs/arrayOption"
        },
        {
          "$ref": "#/$defs/objectOption"
        }
      ]
    },
    "booleanOption": {
      "type": "object",
      "properties": {
        "type": {
          "const": "boolean"
        },
        "name": {
          "type": "string"
        },
        "default": {
          "type": "boolean"
        }
      },
      "required": [
        "type",
        "name"
      ]
    },
    "stringOption": {
      "type": "object",
      "properties": {
        "type": {
          "const": "string"
        },
        "name": {
          "type": "string"
        },
        "default": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "name"
      ]
    },
    "integerOption": {
      "type": "object",
      "properties": {
        "type": {
          "const": "integer"
        },
        "name": {
          "type": "string"
        },
        "default": {
          "type": "integer"
        },
        "minimum": {
          "type": "integer"
        },
        "maximum": {
          "type": "integer"
        }
      },
      "required": [
        "type",
        "name"
      ]
    },
    "floatOption": {
      "type": "object",
      "properties": {
        "type": {
          "const": "float"
        },
        "name": {
          "type": "string"
        },
        "default": {
          "type": "number"
        },
        "minimum": {
          "type": "number"
        },
        "maximum": {
          "type": "number"
        }
      },
      "required": [
        "type",
        "name"
      ]
    },
    "arrayOption": {
      "type": "object",
      "properties": {
        "type": {
          "const": "array"
        },
        "name": {
          "type": "string"
        },
        "items": {
          "$ref": "#/$defs/option"
        }
      },
      "required": [
        "type",
        "name",
        "items"
      ]
    },
    "objectOption": {
      "type": "object",
      "properties": {
        "type": {
          "const": "object"
        },
        "name": {
          "type": "string"
        },
        "properties": {
          "additionalProperties": {
            "$ref": "#/$defs/option"
          }
        }
      },
      "required": [
        "type",
        "name",
        "properties"
      ]
    }
  }
}